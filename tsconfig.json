{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "build",
    "removeComments": true,
    "preserveConstEnums": true,
    "pretty": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/playwright.ts",
    "**/*.spec.ts"
  ]
}
